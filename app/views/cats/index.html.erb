<div class="page-header">
  <h1>Cats!</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Number of Toys
      </th>
    </tr>
  </thead>
  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td>
          <%= link_to cat.name, cat_path(cat) %>
        </td>
        <td>
          <%= cat.toys.count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
